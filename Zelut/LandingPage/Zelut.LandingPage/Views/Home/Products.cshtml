@using System.Reflection.Metadata
@using Zelut.LandingPage.DTOs
@model List<ZelutProductsWebResultDto>

@{
    var current_category_id = Context.Request.RouteValues["category_id"]?.ToString();
    var product_category = Model.FirstOrDefault(s =>s .Id == int.Parse(current_category_id ?? "0"));
}

<section class="lg:pb-16 px-10 lg:px-20 relative flex items-center bg-lightGray justify-end productsHeroSection">
    <div class="hidden lg:flex lg:absolute right-0 lg:right-20 items-center justify-center overflow-hidden lg:h-full">
        <img src="~/images/productsCover.png" class="object-cover w-full" alt="slider" />
    </div>
    <div class="bg-glassyWhite relative p-5 md:p-10 lg:py-16 lg:px-10 xl:py-12 lg:w-2/6 backdrop-blur-md text-center">
        <img src="~/images/icons/diamonds.svg" alt="pattern" class="absolute -top-10 left-5 hidden lg:block" />

        <div class="mb-5 flex flex-col items-center w-max mx-auto">
            <h1 class="text-green text-2xl md:text-3xl lg:text-5xl font-medium" id="productHeadTitle">
                @product_category.EnglishName
            </h1>
            <p id="productHeadSubtitle" class="self-end text-lg"> @product_category.NameModel</p>
        </div>
        <p class="text-justify text-base md:text-lg lg:text-xl" id="productHeadBody">
            @product_category.Description
        </p>
    </div>
</section>

<div class="p-10 px-10 md:px-16 lg:p-22 lg:px-26 flex w-full overflow-x-scroll items-center justify-between gap-4">
    <a asp-controller="Home" asp-action="Products" asp-route-category_id="@((int?)null)" data-category-id=""
        class="text-lightGreen bg-lightGray -skew-x-24 flex-1 flex items-center justify-center p-3 cursor-pointer @(string.IsNullOrEmpty(current_category_id) ? "currentProductCat" : "")">
        <p class="skew-x-24 pointer-events-none" style="text-align:center">همه</p>
    </a>
    <a asp-controller="Home" asp-action="Products" asp-route-category_id="1" data-category-id="1"
        class="text-lightGreen bg-lightGray -skew-x-24 flex-1 flex items-center justify-center p-3 cursor-pointer @(current_category_id == "1" ? "currentProductCat" : "")">
            <p class="skew-x-24 pointer-events-none" style="text-align:center">مینیمــال</p>
    </a>
    <a asp-controller="Home" asp-action="Products" asp-route-category_id="2" data-category-id="2"
        class="text-lightGreen bg-lightGray -skew-x-24 flex-1 flex items-center justify-center p-3 cursor-pointer @(current_category_id == "2" ? "currentProductCat" : "")">
        <p class="skew-x-24 pointer-events-none" style="text-align:center">کلاسیــک</p>
    </a>
    <a asp-controller="Home" asp-action="Products" asp-route-category_id="3" data-category-id="3"
        class="text-lightGreen bg-lightGray -skew-x-24 flex-1 flex items-center justify-center p-3 cursor-pointer @(current_category_id == "3" ? "currentProductCat" : "")">
        <p class="skew-x-24 pointer-events-none" style="text-align:center">اسپـــرت</p>
    </a>
    <a asp-controller="Home" asp-action="Products" asp-route-category_id="4" data-category-id="4"
        class="text-lightGreen bg-lightGray -skew-x-24 flex-1 flex items-center justify-center p-3 cursor-pointer @(current_category_id == "4" ? "currentProductCat" : "")">
        <p class="skew-x-24 pointer-events-none" style="text-align:center">آفیــــس</p>
    </a>
</div>

<section class="px-5 md:px-10 lg:px-20 mb-20 grid gap-y-12 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 2xl:grid-cols-4">
    @if (Model != null && Model.Any())
    {
        @foreach (var productGroup in Model)
        {


            @if (productGroup.ZelutDetail != null && productGroup.ZelutDetail.Any())
            {
                @if (true)
                {
                    @foreach (var detail in productGroup.ZelutDetail)
                    {

                        <div class="p-4">
                            <div class="flex-1 shadow-xl">
                                <div class="overflow-hidden" style="aspect-ratio: 2 / 1.7">
                                    <img src="~/images/products/category@(productGroup.Id)/product@(detail.Id)/01.jpg" alt="product" class="w-full object-cover" />
                                </div>
                                <div class="p-5">
                                    <h3 class="text-xl">@productGroup.NameModel - @detail.NameJadid</h3>
                                    <p class="my-5">@detail.TedadeRang رنگ</p>
                                    <div class="flex mb-5 py-3 px-1 overflow-x-scroll gap-3">

                                        @if (detail.ZelutDetailColors != null && detail.ZelutDetailColors.Any())
                                        {
                                            @foreach (var color in detail.ZelutDetailColors)
                                            {
                                                <div class="w-10 aspect-square rounded-sm shrink-0" style="background-color: @(color.Hex)"></div>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">فاقد رنگ</span>
                                        }

                                    </div>
                                    <a asp-controller="Home" asp-action="Product" asp-route-id="@productGroup.Id" asp-route-detail_id="@detail.Id"
                                       class="w-full bg-lightGreen text-center text-white p-3 rounded-md shadow-md">
                                        <p>مشخصات محصول</p>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                }
            }
            else
            {
                @if(productGroup.Id !=0)
                {
                    <p class="text-muted">هیچ جزئیاتی برای این مجموعه وجود ندارد.</p>
                }
            }

        }
    }


</section>


<section class="px-1 md:px-6 lg:px-16 mb-20">
    <h2 class="text-2xl lg:text-3xl text-lightGreen mb-5 lg:mb-10 px-4">
        اخبار و مقالات
    </h2>
    <div class="flex items-stretch gap-y-12 w-full overflow-x-scroll weblogContainer">
 @await Component.InvokeAsync("Blogs")
     </div>
</section> 