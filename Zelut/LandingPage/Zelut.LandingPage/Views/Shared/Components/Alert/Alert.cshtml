@model Zelut.LandingPage.Models.AlertViewModel;
@if(!string.IsNullOrEmpty(Model.AlertMessage))
{
    <div class="fixed right-0 top-0 w-full h-full flex items-center justify-center z-20 alertModal" role="alert">
      <div class="alert-@Model.Type bg-white px-10 py-5 shadow-2xl flex flex-col items-center w-4/5 max-w-2xl justify-center border-2 border-lightGreen">
          <img src="~/images/submitIcon.svg" alt="submit" class="w-32 md:w-36 lg:w-40 mb-10 mt-5 submitIcon">
          <img src="~/images/errorIcon.svg" alt="submit" class="w-32 md:w-36 lg:w-40 mb-10 mt-5 errorIcon">
          <p class="text-xl md:text-2xl lg:text-3xl text-lightGreen mb-6 text-center">
            @Model.AlertMessage
          </p>
          <button type="button" data-bs-dismiss="alert" aria-label="Close" class="bg-lightGreen w-full py-2 px-10 shadow-md text-white text-lg md:text-xl" onclick="closeModal('@Model.Type')">متوجه شدم</button>
      </div>
      
    </div>
}